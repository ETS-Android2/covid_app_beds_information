<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HospitalUpdation">

    <EditText
        android:id="@+id/et_Hu_Reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:hint="enter Reg.No of Hospital"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/et_Hu_Beds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="No of Beds"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/et_Hu_Ventilators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="No of ventilators"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/btn_Hu_Update"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Update" />
</LinearLayout>